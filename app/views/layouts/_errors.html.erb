<% if object.errors.any? %>
    <div class="alert alert-danger">
    <a href="#" class="close" data-dismiss="alert">&times;</a>
    <% if object.errors.full_messages.include?("Email has already been taken") %>
      <li>  <%= flash[:alert] = "Email has already been taken" %> </li>
    <% elsif object.errors.full_messages.include?("Password confirmation doesn't match Password") %>
      <li>  <%= flash[:alert] = "Passwords do not match" %> </li>
    <% else %>
      <li>  <%= flash[:alert] = object.errors.full_messages.first %> </li>
    <% end %>
    </div>
<% end %>


